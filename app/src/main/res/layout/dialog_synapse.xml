<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkest_blue"
    style="@style/synapse_dialog">

    <TextView
        android:id="@+id/txtCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textColor="@color/highlight"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"
        android:drawableRight="@drawable/credits"
        android:drawableEnd="@drawable/credits"
        android:drawablePadding="20dp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"
        android:drawableRight="@drawable/tag"
        android:drawableEnd="@drawable/tag"
        android:drawablePadding="20dp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/dialog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button style="?android:buttonBarStyle"
            android:text="@string/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_weight="0.5"
            android:textColor="@color/button_text"
            android:background="@drawable/button_back"
            android:layout_margin="7dp"/>

        <Button style="?android:buttonBarStyle"
            android:text="@string/accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirm"
            android:layout_weight="0.5"
            android:textColor="@color/button_text"
            android:background="@drawable/button_back"
            android:layout_margin="7dp"/>
    </LinearLayout>
</LinearLayout>