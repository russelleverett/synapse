<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:textColor="@android:color/white"
        android:textAllCaps="true"/>

    <!--SECURITY-->
    <LinearLayout style="@style/node_info">

        <TextView style="@style/node_info.label"
            android:labelFor="@+id/txtSecurity"
            android:text="@string/security_label"/>

        <TextView style="@style/node_info.value"
            android:id="@+id/txtSecurity"/>
    </LinearLayout>
    
    <!--DISTANCE-->
    <LinearLayout style="@style/node_info" >
        <TextView style="@style/node_info.label"
            android:labelFor="@+id/txtDistance"
            android:text="@string/distance_label"/>

        <TextView style="@style/node_info.value"
            android:id="@+id/txtDistance"/>
    </LinearLayout>

    <!--DURATION-->
    <LinearLayout style="@style/node_info">

        <TextView style="@style/node_info.label"
            android:labelFor="@+id/txtDuration"
            android:text="@string/duration_label"/>

        <TextView style="@style/node_info.value"
            android:id="@+id/txtDuration"/>
    </LinearLayout>

    <!--COST-->
    <LinearLayout style="@style/node_info"
        android:paddingBottom="5dp">

        <TextView style="@style/node_info.label"
            android:labelFor="@+id/txtCost"
            android:text="@string/cost_label"/>

        <TextView style="@style/node_info.value"
            android:id="@+id/txtCost"/>
    </LinearLayout>
</LinearLayout>